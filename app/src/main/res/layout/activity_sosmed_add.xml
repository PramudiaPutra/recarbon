<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_sosmed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_recarbon"
    tools:context=".features.home.posting.SosmedAddActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/margin_vertical_small"
        android:layout_marginEnd="8dp"
        android:rotationY="180"
        android:src="@drawable/postingan_content_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_back" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/margin_vertical_medium"
        android:fontFamily="@font/poppins_light"
        android:includeFontPadding="false"
        android:text="Kembali"
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/back_white_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vertical_medium"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:text="Postingan Baru"
        android:textColor="@color/white"
        android:textSize="@dimen/text_medium"
        app:layout_constraintStart_toStartOf="@id/tv_back"
        app:layout_constraintTop_toBottomOf="@id/tv_back" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vertical_small"
        android:fontFamily="@font/poppins_light"
        android:includeFontPadding="false"
        android:text="Punya postingan menarik nih ?"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        app:layout_constraintStart_toStartOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <ScrollView
        android:id="@+id/sv_posting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/signin_layout_bg"
            android:padding="@dimen/margin_horizontal"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/tv_tambahJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Tambahkan Judul"
                android:textColor="@color/font_color_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_judulPoting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tambahJudul" />

            <TextView
                android:id="@+id/tv_lokasiPosting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Tambahkan Lokasi"
                android:textColor="@color/font_color_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edt_judulPoting" />

            <EditText
                android:id="@+id/edt_lokasiPoting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_lokasiPosting" />


            <TextView
                android:id="@+id/tv_tambahDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Tambahkan Deskripsi"
                android:textColor="@color/font_color_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edt_lokasiPoting" />

            <EditText
                android:id="@+id/edt_deskripsiPoting"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="@drawable/edt_desc_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tambahDeskripsi" />

            <TextView
                android:id="@+id/tv_tambahFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Tambahkan Foto"
                android:textColor="@color/font_color_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edt_deskripsiPoting" />

            <ImageView
                android:id="@+id/img_fotoPosting"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/camera_black_icon"
                app:layout_constraintBottom_toBottomOf="@id/tv_tambahFoto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_tambahFoto" />


            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_fotoPosting" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBarLoadingIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/textViewIndicatorLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="100%"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/progressBarLoadingIndicator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                />


            <Button
                android:id="@+id/btn_kirimPosting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/poppins_medium"
                android:padding="6dp"
                android:text="Kirim"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_image" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>